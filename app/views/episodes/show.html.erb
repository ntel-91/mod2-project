<h1><%= @episode.episode_name %></h1>

<iframe width="560" height="315" src='https://www.youtube.com/embed/<%= @episode_id %>' allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>

<br>

<h1>Create Review</h1>

<%= form_with model: @view do |f| %>
    <%= f.text_area :review, :value => "" %><br>
    <%= f.submit "Add Review" %>
<% end %>

<h1>Episode Reviews</h1>

<% @reviews.reverse.each do |r| %>
    <p><%= r.review %></p>
<% end %>




